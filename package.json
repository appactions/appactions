{
    "private": true,
    "workspaces": [
        "react-app-actions",
        "kitchensink-nextjs",
        "cypress-app-actions",
        "browser-extension"
    ],
    "devDependencies": {
        "concurrently": "^6.2.1",
        "eslint": "^7.22.0",
        "husky": "^5.1.3",
        "lint-staged": "^10.5.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md}": "prettier --write"
    },
    "scripts": {
        "dev": "cd react-app-actions && rollup --config rollup.config.js --watch",
        "dev:cypress": "concurrently -n 'browser-ext,kitchensink' -c 'yellow,green' 'yarn workspace browser-extension dev' 'yarn workspace kitchensink-nextjs cypress' --kill-others",
        "test": "CI=true yarn --silent workspace kitchensink-nextjs react-app-actions"
    }
}

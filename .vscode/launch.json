{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest in core",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/packages/core",
            "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/packages/core/node_modules/.bin/jest", "--runInBand", "--watch"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}
